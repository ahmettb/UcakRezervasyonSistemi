@{
    Layout = "~/Areas/Employees/Views/Shared/Layout.cshtml";

}
   @model List<RezervasyonUcak.Areas.Employees.Models.UcusSefer>;

      
<div class="container" style="margin:50px">

    <h4>Uçuş Bilgileri</h4>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive" data-pattern="priority-columns">
                <table summary="This table shows how to create responsive tables using RWD-Table-Patterns' functionality" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th data-priority="1">Başlangıç Konumu</th>
                            <th data-priority="2">Varış Konumu</th>
                            <th data-priority="3">Başlangıç Saati</th>
                            <th data-priority="4">Varış Saati</th>
                            <th data-priority="5">Uçak Model Numarası</th>
                            <th data-priority="6">Firma</th>
                            <th data-priority="6">Fiyat</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ucus in Model)
                        {
                            <tr>
                                <td>@ucus.UcusKonum.BaslangicKonum</td>
                                <td>@ucus.UcusKonum.VarisKonum</td>
                                <td>@ucus.BaslangicSaat</td>
                                <td>@ucus.VarisSaati</td>
                                <td>@ucus.Ucak.ModelNo</td>
                                <td>@ucus.Ucak.Firma.FirmaAdi</td>
                                <td>@ucus.UcusFiyat TL</td>
@*                                 <td><button onclick="getSeats('@ucus.Ucak.UcakId','@ucus.UcusId')">Satın Al</button></td>
                            *@

                                <td> <button onclick="getSeats(`@ucus.UcusId`)"> Koltukları Getir</button></td>

                        
                            </tr>
                        }


                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

